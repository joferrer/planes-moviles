---
import "../styles/global.css";

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<div class="p-1.5 sm:p-4 md:p-20">
			<slot />
		</div>
	</body>
</html>

<style>
	:root{
		--background: #101010;
		--white-icon: #f3f3f398;
		--card-bg : oklch(25% .02 300);
		--claro-bg: rgb(255 194 231 / 90%);
		--movistar-bg: rgb(60 255 208 / 90%);
		--tigo-bg: rgba(25, 0, 255, 0.9);
		--bordes-color-1: #5200ff;
		--wom-bg: rgb(82 0 255 / 90%);
	}
	html{
		background: var(--background);
		color: #fff;
	}
	body {
		@apply grid place-items-center;
	}
	body > div {
		@apply container;
	}
</style>
